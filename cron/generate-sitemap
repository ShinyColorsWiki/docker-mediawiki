#!/bin/sh

# PHP Version
_phpv=83

cd /srv/wiki

sudo -u nginx -g www-data \
    php$_phpv /srv/wiki/w/maintenance/run.php \
        /srv/wiki/w/maintenance/generateSitemap.php \
    --memory-limit=50M \
    --fspath=sitemap \
    --identifier=shinywiki \
    --urlpath=/sitemap/ \
    --server=https://shinycolors.wiki \
    --compress=yes
