#!/bin/sh

# PHP Version
_phpv=83

cd /srv/wiki/w

maintenance() {
    sudo -u nginx -g www-data php$_phpv /srv/wiki/w/maintenance/run.php "$@"
}

mkdir -p /var/log/mw
maintenance /srv/wiki/w/maintenance/runJobs.php --type="enotifNotify" >> /var/log/mw/runJobs.log 2>&1
maintenance /srv/wiki/w/maintenance/runJobs.php --type="htmlCacheUpdate" --maxjobs=50 >> /var/log/mw/runJobs.log 2>&1
maintenance /srv/wiki/w/maintenance/runJobs.php --maxtime=3600 >> /var/log/mw/runJobs.log 2>&1
